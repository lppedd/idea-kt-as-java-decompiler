<idea-plugin>
  <id>com.github.lppedd.idea-kt-decompiler-everywhere</id>
  <name>Kotlin Decompiler Everywhere</name>
  <vendor
      email="lp.edoardo@gmail.com"
      url="https://github.com/lppedd/idea-kt-decompiler-everywhere"
  >
    Edoardo Luppi
  </vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!--suppress PluginXmlDynamicPlugin -->
    <editorNotificationProvider
        order="first"
        implementation="com.github.lppedd.decompiler.KotlinDecompilerNotificationProvider"
    />
  </extensions>
</idea-plugin>
